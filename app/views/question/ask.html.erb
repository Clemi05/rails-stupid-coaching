<div class="container">
  <h1>Stupid Coaching</h1>
  <form action="/answer" method="get">
    <label for="question" class="form-label">Ask your coach anything:</label><br>
    <div class="input-group mb-3">
      <input type="text" name="question" class="form-control" value="<%= params[:question] %>">
      <input type="submit" value="Ask!" class="btn btn-primary">
    </div>
  </form>
</div>
